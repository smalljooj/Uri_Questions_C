#include <stdio.h>


double square_root_10(int n)
{
    if(n == 0)
        return 3;
    double result = 6;
    for(int i = 0; i < n - 1; i++)
    {
        result = 6 + 1.0/result;
    }
    return 3 + 1.0/result;
}

int main()
{
    int a;
    scanf("%i", &a);
    printf("%.10f\n", square_root_10(a));

    return 0;
}
